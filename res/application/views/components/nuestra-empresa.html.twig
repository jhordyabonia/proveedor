<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="titulos font-naranja"><strong>{{ empresa.nombre }}</strong></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <i class="fa fa-map-marker fa-lg fa-fw font-naranja"></i> 
                <span>
                     {{ usuario.ciudad|title }}
                </span>
            </div>
            <div class="col-xs-12">
                <img class="img_verificacion" src="{{ img_url() }}membresia/{{ membresia.logo }}" 
                alt="Icono Membresia" width="19px">
                <span class="texto-membresia">
                     {{ membresia.nombre }}
                </span>
            </div>
            <div class="col-xs-12">
                {% if empresa.verificacion == 'Y' %}
                <span class="titulo_validacion">
                    <img class="inline-block img_verificacion" src="{{ img_url() }}membresia/Check_mark__64.png" alt="Icono de verificacion" width="19px">
                    <span class="texto-membresia">
                        Verificada
                    </span>
                </span>
                {% endif %}
            </div>

        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <p class="descripcion_empresa">
                    {{empresa.descripcion}}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        <span class="font-gris">
                            Ubicación: 
                        </span>
                        <span class="">
                            {{ usuario.ciudad|title}}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="font-gris">
                            Tipo de Empresa: 
                        </span>
                        <span>
                            {{empresa.tipo|title}}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="font-gris">
                            Categoria principal: 
                        </span>
                        <span>
                            {{empresa.categoria|title}}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="font-gris">
                            Productos Principales: 
                        </span>
                        <span>
                        
                            {% if empresa.productos_principales == '0' %}
                                La empresa no muestra sus productos principales
                            {% else %}
                                {% if empresa.productos_principales == '' %}
                                    La empresa no muestra sus productos principales
                                {% else %}
                                {{empresa.productos_principales|title}}
                                {% endif %}
                            {% endif %}
                        </span>
                    </div>
                </div>                
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <p class="catalogo ">
                    <i class="glyphicon glyphicon-th ico_cat_soli font-gris"></i>
                    Ver Catálogo - 
                     <a href="{{base_url()}}empresa/catalogo_producto/{{empresa.id}}" class="productos"> 
                        {{empresa.numero_productos}} - productos  
                    </a>
                </p>
            </div>
        </div>
        <!--
        <div class="row">
            <div class="col-xs-12">
                <p class="catalogo">
                    <i class="glyphicon glyphicon-list-alt ico_cat_soli font-gris"></i>
                    Productos Solicitados -
                    <a href="{{base_url()}}empresa/cotizaciones_requeridas/{{empresa.id}}" class="productos">
                        {{empresa.numero_solicitudes}}  - Solicitudes 
                    </a>
                </p>
            </div>            
        </div>
        -->
    </div>
</div>