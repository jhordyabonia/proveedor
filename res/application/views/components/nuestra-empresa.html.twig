<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="titulos font-naranja"><strong>{{ empresa.nombre|title }}</strong></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <i class="fa fa-map-marker fa-lg fa-fw font-naranja"></i> 
                <span>
                    Buenaventura
                </span>
            </div>
            <div class="col-xs-12">
                <img class="img_verificacion" src="{{ img_url() }}membresia/{{ membresia.logo }}" 
                alt="Icono Membresia" width="19px">
                <span class="texto-membresia">
                    Empresa Platino
                </span>
            </div>
            <div class="col-xs-12">
                {% if empresa.verificacion == 'Y' %}
                <span class="titulo_validacion">
                    <img class="inline-block img_verificacion" src="{{ img_url() }}membresia/Check_mark__64.png" alt="Icono de verificacion" width="19px">
                    <span class="texto-membresia">
                        Verificada
                    </span>
                </span>
                {% endif %}
            </div>

        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <p class="descripcion_empresa">
                    {{empresa.descripcion}}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        <span class="font-gris">
                            Ubicación: 
                        </span>
                        <span class="">
                            {{ usuario.ciudad|title}}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="font-gris">
                            Tipo de Empresa: 
                        </span>
                        <span>
                            {{empresa.tipo|title}}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="font-gris">
                            Categoria principal: 
                        </span>
                        <span>
                            Construcción y Arquitectura
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="font-gris">
                            Productos Principales: 
                        </span>
                        <span>
                            {{empresa.productos_principales|title}}
                        </span>
                    </div>
                </div>                
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <p class="catalogo ">
                    <i class="glyphicon glyphicon-th ico_cat_soli font-gris"></i>
                    Ver Catálogo - 
                    <a href="#" class="productos"> 5 - productos  <!-- insertar variable -->
                    </a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <p class="catalogo">
                <i class="glyphicon glyphicon-list-alt ico_cat_soli font-gris"></i>
                Productos Solicitados -
                <a href="#" class="productos">
                    4 - Solicitudes
                </a>
            </div>
        </p> 
            
        </div>
    </div>
</div>