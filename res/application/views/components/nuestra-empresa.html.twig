<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <h3 class="titulos font-naranja"><strong>{{ empresa.nombre|title }}</strong></h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <img class="" src="{{ img_url() }}membresia/{{ membresia.logo }}" 
                alt="Icono Membresia" width="20px">
                Empresa Platino
                {% if empresa.verificacion == 'Y' %}
                <span class="titulo_validacion">
                    <img class="inline-block img_verificacion" src="{{ img_url() }}membresia/Check_mark__64.png" alt="Icono de verificacion" width="20px">
                    Verificada
                </span>
                {% endif %}
            </div>
            <div class="col-xs-6">
                <i class="fa fa-map-marker font-naranja"></i> 
                Buenaventura
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <p class="descripcion_empresa">
                    {{empresa.descripcion}}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        Ubicación: 
                        <span class="">
                            {{ usuario.ciudad|title}}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        Tipo de Empresa: 
                        <span class="">
                            {{empresa.tipo|title}}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        Productos Principales: 
                        <span class="">
                            {{empresa.productos_principales|title}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <p class="catalogo">
                    <i class="glyphicon glyphicon-th ico_cat_soli"></i>
                    Ver Catálogo - 
                    <a href="#" class="productos"> 5 - productos  <!-- insertar variable -->
                    </a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <p class="catalogo">
                <i class="glyphicon glyphicon-list-alt ico_cat_soli"></i>
                Productos Solicitados -
                <a href="#" class="productos">
                    4 - Solicitudes
                </a>
            </div>
        </p> 
            
        </div>
    </div>
</div>